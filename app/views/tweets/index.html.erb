<%= render 'layouts/header' %>
  <% if user_signed_in?%>
    <a href="/tweets/new" class="button1">投稿</a>
    <a href="/users/<%=current_user.id%>" class="button2">マイページ</a>
  <% else %>
    <a href="/users/sign_up" class="button1">新規登録</a>
    <a href="/users/sign_in" class="button2">ログイン</a>
  <%end%>
</header>
<div class="content">
  <div class= "contents">
    <% @tweets.each do |t|%>
      <a href="/tweets/<%=t.id%>" class="tweets">
        <div class="image">
          <%= image_tag(t.image,:size =>"312x182")%>
        </div>
        <div class="title">
          <%= t.title %>
        </div>
      </a>
    <% end %>
  <%= paginate(@tweets)%>
  </div>
  
</div>
