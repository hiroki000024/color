<%= render 'layouts/header' %>
  <% if user_signed_in?%>
    <a href="/tweets/new" class="button1">投稿</a>
    <%=link_to "ログアウト", destroy_user_session_path,{method: :delete,class: "button2"}%>
  <% else %>
    <a href="/users/sign_up" class="button1">新規登録</a>
    <a href="/users/sign_in" class="button2">ログイン</a>
  <%end%>
</header>
<div class="content">
  <div class= "contents">
    <% @tweets.each do |t|%>
      <a href="" class="tweets">
        <div class="image">
          <%= image_tag(t.image,:size =>"312x182")%>
        </div>
        <div class="title">
          <%= t.title %>
        </div>
      </a>
    <% end %>
  <%= paginate(@tweets)%>
  </div>
  
</div>
